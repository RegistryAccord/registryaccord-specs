{
  "lexicon": 1,
  "id": "com.registryaccord.feed.post",
  "defs": {
    "record": {
      "type": "record",
      "description": "Creator post record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["text", "createdAt", "authorDid"],
        "properties": {
          "text": {"type": "string", "maxLength": 2048},
          "createdAt": {"type": "string", "format": "datetime"},
          "authorDid": {"type": "string"}
        }
      }
    },
    "list": {
      "type": "query",
      "description": "List posts by author",
      "parameters": {
        "type": "params",
        "properties": {
          "authorDid": {"type": "string"},
          "limit": {"type": "integer", "minimum": 1, "maximum": 100}
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["items"],
          "properties": {
            "items": {
              "type": "array",
              "items": {"type": "ref", "ref": "com.registryaccord.feed.post#record"}
            }
          }
        }
      }
    }
  }
}

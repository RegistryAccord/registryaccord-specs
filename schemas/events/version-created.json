{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://api.registryaccord.com/schemas/events/version-created",
  "title": "Version Created Event",
  "type": "object",
  "required": ["event_id", "event_type", "timestamp", "data"],
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "event_type": {
      "type": "string",
      "const": "version.created.v1"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "data": {
      "type": "object",
      "required": ["content_id", "version_id", "version_number"],
      "properties": {
        "content_id": { "type": "string", "format": "uuid" },
        "version_id": { "type": "string", "format": "uuid" },
        "version_number": { "type": "integer", "minimum": 1 },
        "parent_version_id": { 
          "type": ["string", "null"], 
          "format": "uuid" 
        }
      }
    }
  }
}

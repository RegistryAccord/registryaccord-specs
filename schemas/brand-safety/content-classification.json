{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://api.registryaccord.com/schemas/brand-safety/content-classification",
  "title": "Content Classification Response",
  "description": "Pre-bid content classification result with confidence scores",
  "type": "object",
  "required": ["content_id", "classifications", "classified_at"],
  "properties": {
    "content_id": {
      "type": "string",
      "format": "uuid"
    },
    "classifications": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["category_id", "category_name", "confidence"],
        "properties": {
          "category_id": {
            "type": "string",
            "pattern": "^IAB[0-9]+(-[0-9]+)?$"
          },
          "category_name": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Classification confidence score (0-1)"
          },
          "tier": {
            "type": "integer",
            "minimum": 1,
            "maximum": 3
          }
        }
      }
    },
    "brand_suitability": {
      "type": "string",
      "enum": ["LOW_RISK", "MODERATE_RISK", "HIGH_RISK", "ADULT_CONTENT"]
    },
    "needs_human_review": {
      "type": "boolean",
      "default": false,
      "description": "Flags content for human review escalation"
    },
    "classified_at": {
      "type": "string",
      "format": "date-time"
    },
    "classifier_version": {
      "type": "string",
      "description": "Version of classification model used"
    }
  }
}

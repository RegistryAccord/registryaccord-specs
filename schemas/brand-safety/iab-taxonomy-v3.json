{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://api.registryaccord.com/schemas/brand-safety/iab-taxonomy-v3",
  "title": "IAB Content Taxonomy v3.0",
  "description": "Brand safety categories following IAB Content Taxonomy v3.0 for pre-bid content classification",
  "type": "object",
  "required": ["category_id", "category_name", "tier"],
  "properties": {
    "category_id": {
      "type": "string",
      "pattern": "^IAB[0-9]+(-[0-9]+)?$",
      "description": "IAB category identifier",
      "examples": ["IAB1", "IAB1-1", "IAB24"]
    },
    "category_name": {
      "type": "string",
      "description": "Human-readable category name"
    },
    "tier": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3,
      "description": "Taxonomy tier level (1 = top-level, 2-3 = subcategories)"
    },
    "parent_category_id": {
      "type": "string",
      "pattern": "^IAB[0-9]+(-[0-9]+)?$",
      "description": "Parent category for tier 2+ categories"
    },
    "is_sensitive": {
      "type": "boolean",
      "default": false,
      "description": "Flags sensitive content categories"
    },
    "brand_suitability": {
      "type": "string",
      "enum": [
        "LOW_RISK",
        "MODERATE_RISK",
        "HIGH_RISK",
        "ADULT_CONTENT"
      ],
      "description": "Brand safety risk level"
    }
  }
}
